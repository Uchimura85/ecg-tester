<?xml version="1.0" encoding="utf-8"?>


<resources>

	<style name="Widget.IconButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:focusable">false</item>
		<item name="android:focusableInTouchMode">false</item>
		<item name="android:clickable">true</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:background">@null</item>
	</style>

	<style name="Widget.IconButton.Add">
		<item name="android:src">@drawable/ic_action_add</item>
	</style>

	<style name="Widget.IconButton.Clear">
		<item name="android:src">@drawable/ic_action_clear</item>
	</style>

	<style name="Widget.IconButton.Download">
		<item name="android:src">@drawable/ic_action_download</item>
	</style>
</resources>